@{
    var appName = "Laja Education";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @appName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="">
    <div class="navbar navbar-inverse navbar-fixed-top red-back">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(appName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">


                        @{
                            if (User.IsInRole("Lärare"))
                            {

                                <li>@Html.ActionLink("Kurser", "Index", "Courses")</li>
                                <li>@Html.ActionLink("Registrera lärare", "Create", "User", new { @Role = "Lärare" }, null)</li>
                                <li>@Html.ActionLink("Dokument", "Index", "Documents")</li>
                                <li>@Html.ActionLink("Inlämningsuppgifter", "Assignments", "Documents")</li>
                            }
                            else
                            {
                                if (User.IsInRole("Elev"))
                                {
                                    <li>@Html.ActionLink("Min sida", "Index", "Student")</li>
                                    <li>@Html.ActionLink("Dokument", "Index", "Documents")</li>
                                    <li>@Html.ActionLink("Inlämningsuppgifter", "Assignments", "Documents")</li>
                                }
                            }
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </nav>
            </div>
        </div>
    </div>
    <div class="container body-content"><br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @appName - Copyright &copy;</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

